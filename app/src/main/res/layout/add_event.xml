<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Add Event"
            android:textColor="#FFFF00"
            android:textSize="19dp"
            android:textStyle="bold" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#80ffffff"
        android:orientation="vertical" >

        
        
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="3dp"
           android:layout_marginRight="3dp"
           android:layout_marginTop="8dp"
           android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="6dp"
                android:text="Event Name"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EDEventName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/photobackground"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:maxLength="90" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="6dp"
                android:text="Description"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EDDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/photobackground"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLength="1000" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="6dp"
                android:text="Venue"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EDVenue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/photobackground"
                android:gravity="top"
                android:maxLength="90" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="Date &amp; Time"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EdDate"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/photobackground"
                android:hint="dd-mm-yyyy"
                android:textSize="17dp" />
            
            <TextView
                android:id="@+id/EdTime"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/photobackground"
                android:hint="12:00 AM"
                android:textSize="17dp" />

        </LinearLayout>
        
        <Button
            android:id="@+id/btnAddEventDirectors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/blue_back"
            android:text=" + Add Project Directors"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#95ffffff"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/chkSendGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Send to group"
                android:textSize="16dp"
                android:textStyle="bold" />
            
            
            <CheckBox
                android:id="@+id/chkEventConfirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Get confirmation for this event"
                android:textSize="16dp"
                android:textStyle="bold" />
                
         </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#95ffffff"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Send Email also"
                android:textSize="16dp"
                android:textStyle="bold" />
            
               <Spinner
                   android:id="@+id/Sp_EmailFormat"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:spinnerMode="dialog" />
                
         </LinearLayout>
       
       

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical" >
        
         <ImageView
             android:id="@+id/imgSubmit"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:src="@drawable/submit" />

    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnPendingEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/orange_button"
            android:visibility="gone"
            android:text="Pending Event" />

    </LinearLayout>

</LinearLayout>
