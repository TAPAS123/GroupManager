<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/bg2"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayoutbutn">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="SUBMIT"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonListalrt"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/buttonSave"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="CANCEL"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayoutbutn"
        android:id="@+id/linearLayout3"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/scrollViewRemark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp">

                    <EditText
                        android:id="@+id/editTextEmark1"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="top"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/checkBoxRemark1"
                        android:background="@drawable/border_darkgrey"
                        android:hint="Write first message..."
                        android:inputType="textMultiLine"
                        android:padding="6dp"
                        android:textColor="#000000"
                        android:maxLength="500"
                        android:textSize="18dp" />

                    <CheckBox
                        android:id="@+id/checkBoxRemark1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp">

                    <EditText
                        android:id="@+id/editTextEmark2"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="top"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/checkBoxRemark2"
                        android:background="@drawable/border_darkgrey"
                        android:hint="Write second message..."
                        android:inputType="textMultiLine"
                        android:padding="6dp"
                        android:textColor="#000000"
                        android:maxLength="500"
                        android:textSize="18dp" />

                    <CheckBox
                        android:id="@+id/checkBoxRemark2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp">

                    <EditText
                        android:id="@+id/editTextEmark3"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="top"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/checkBoxRemark3"
                        android:background="@drawable/border_darkgrey"
                        android:hint="Write third message..."
                        android:inputType="textMultiLine"
                        android:padding="6dp"
                        android:textColor="#000000"
                        android:maxLength="500"
                        android:textSize="18dp" />

                    <CheckBox
                        android:id="@+id/checkBoxRemark3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <EditText
            android:id="@+id/etremarkShowdialogs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:background="@drawable/edittextstyle"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:text=""
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_heading_main" />

            <LinearLayout  android:id="@+id/rrDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtHead"
                android:orientation="horizontal"
                android:gravity="center_vertical|center">

                <ImageView
                    android:id="@+id/imageprevdate"
                    android:layout_alignParentLeft="true"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:src="@drawable/arrow_prev" />

                <!-- <TextView
                   android:id="@+id/textView3"
                   android:layout_alignParentLeft="true"
                   android:layout_width="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textColor="#000000"
                   android:textAppearance="?android:attr/textAppearanceMedium" />  -->

                <EditText
                    android:id="@+id/editTextDay"
                    android:inputType="number"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/transwhite"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:maxLength="2"
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true"
                    android:hint="DD"
                    android:textColorHint="#000000"
                    android:layout_toRightOf="@+id/imageprevdate"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/editTextDay"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/editTextMonth"
                    android:maxLength="2"
                    android:hint="MM"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/transwhite"
                    android:inputType="number"
                    android:textColorHint="#000000"
                    android:layout_centerVertical="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView4"/>

                <ImageView
                    android:id="@+id/imageNextdate"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/arrow_black"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/editTextMonth" />

                <Button
                    android:id="@+id/btnDateSubmit"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:background="@drawable/red_rounded_rectangle"
                    android:layout_centerVertical="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textAllCaps="true"
                    android:layout_alignParentRight="true"
                    android:text="Submit" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewNoDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="No Record"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llckhbox"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cHkboxall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#2a4f6c"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="SELECT ALL "/>

        </LinearLayout>

        <ListView android:id="@+id/LV1"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    </LinearLayout>

</RelativeLayout>