<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@color/text_grey"></View>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/red_rounded_rectangle"
            android:paddingBottom="4dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="4dp"
            android:text="Date: 19 feb 2019"
            android:textColor="@color/white"
            android:textSize="@dimen/text_heading3" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_heading2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:text="Desc"
            android:textColor="@color/black"
            android:textSize="@dimen/text_heading3"/>


        <LinearLayout
            android:id="@+id/llvenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:padding="4dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/txtVenue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="@dimen/text_heading3" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="3dp"
            android:text="4:56 PM"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_heading3"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
