<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#66BCD4E6" 
    android:layout_width="fill_parent"
    android:layout_height="60dp">

    <TextView 
         android:id="@+id/grp_child"
         android:layout_toRightOf="@+id/imageViewpix"
         android:layout_toLeftOf="@+id/grp_val"
         android:paddingLeft="5dp"
         android:focusable="false"
         android:layout_centerVertical="true"
         android:textSize="16dp"
         android:textStyle="normal"
         android:textColor="#000000"
         android:text="dghsgdfkgdhffss fdgdfgdfggdfgdfg gdgggdfg ggfdf"
         android:layout_width="190dp"
         android:layout_height="wrap_content"/>
         
    <TextView 
    android:layout_toLeftOf="@+id/check1"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content" 
    android:id="@+id/grp_val" 
    android:textSize="17dp"
    android:layout_marginRight="5dp"
    android:textColor="#00703C"
    android:layout_height="wrap_content" 
    android:text="12345678900"/>

   <ImageView
        android:id="@+id/imageViewpix"
        android:paddingLeft="2dp"
        android:layout_width="52dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/person1" />

   <CheckBox
        android:layout_alignParentRight="true"
       android:id="@+id/check1"
       android:layout_centerVertical="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

</RelativeLayout>
