<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <TextView android:id="@+id/txtHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="COMMITTEES"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treasures"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ed_Trea_Name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:padding="5dp"
                android:hint="Name"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_Trea_Mob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="number"
                android:maxLength="10"
                android:hint="Mobile"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Literacy"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp" />

                <EditText
                    android:id="@+id/ed_Lit_Name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/photobackground"
                    android:inputType="textPersonName"
                    android:hint="Name"
                    android:maxLength="40"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_Lit_Mob"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/photobackground"
                    android:inputType="number"
                    android:hint="Mobile"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foundation"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ed_Found_Name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="textPersonName"
                android:hint="Name"
                android:maxLength="40"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_Found_Mob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="number"
                android:hint="Mobile"
                android:maxLength="10"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membership"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ed_Memship_Name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="textPersonName"
                android:hint="Name"
                android:maxLength="40"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_Memship_Mob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="number"
                android:hint="Mobile"
                android:maxLength="10"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PR"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ed_PR_Name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="textPersonName"
                android:hint="Name"
                android:maxLength="40"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_PR_Mob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="number"
                android:hint="Mobile"
                android:maxLength="10"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grant"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ed_Grant_Name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="textPersonName"
                android:hint="Name"
                android:maxLength="40"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_Grant_Mob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="number"
                android:hint="Mobile"
                android:maxLength="10"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wash"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ed_Wash_Name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="textPersonName"
                android:hint="Name"
                android:maxLength="40"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_Wash_Mob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/photobackground"
                android:inputType="number"
                android:hint="Mobile"
                android:maxLength="10"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    </LinearLayout>

    <Button android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightgreen"
        android:text="UPDATE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp" />

</LinearLayout>
