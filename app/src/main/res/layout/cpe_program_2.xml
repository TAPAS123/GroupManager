<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="CPE"
        android:textColor="@color/black"
        android:textSize="@dimen/text_heading_main"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/txtdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_heading2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCpe_LDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtdate"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_heading2" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txtCpe_LTime"
            android:layout_margin="5dp"
            android:text="Time:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_heading2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCpe_LTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_heading2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <TextView android:id="@+id/txtVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:text="Venue:"
            android:textColor="#000000"
            android:textSize="@dimen/text_heading2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCpe_LVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtVenue"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="@dimen/text_heading2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL_CpeCreditFees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/txtcpeCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:text="CPE Credit:"
            android:textColor="#000000"
            android:textSize="@dimen/text_heading2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCpe_LHrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtcpeCredit"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="@dimen/text_heading2" />

        <TextView
            android:id="@+id/txtcpeFees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txtCpe_LFees"
            android:layout_margin="5dp"
            android:text="Fees:"
            android:textColor="#000000"
            android:textSize="@dimen/text_heading2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCpe_LFees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="@dimen/text_heading2" />


    </RelativeLayout>

    <ListView
        android:id="@+id/LV1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="6dp"
        android:divider="#00000000"
        android:dividerHeight="6dp" />

    <TextView
        android:id="@+id/txtCpe_LOrgBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_heading2" />

    <TextView
        android:id="@+id/txtCpe_LRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:text="Remarks:"
        android:textColor="#000000"
        android:textSize="@dimen/text_heading2" />

    <ImageView
        android:id="@+id/imgVw_Ad"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/person1"
        android:visibility="gone" />

</LinearLayout>