<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/setstroke"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingTop="3dp" >

    <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgPerson"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:src="@drawable/user"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1px" />
          
          <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@+id/ivArrow"
            android:layout_toRightOf="@+id/imgPerson"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#383838"
            android:textSize="@dimen/text_heading2"
            android:textStyle="bold" />

          <TextView
              android:id="@+id/txtRelation"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/txtName"
              android:layout_toLeftOf="@+id/ivArrow"
              android:layout_toRightOf="@+id/imgPerson"
              android:padding="5dp"
              android:text="Relation"
              android:textColor="#5d5d5d"
              android:textSize="@dimen/text_heading3" />

          <ImageView
              android:id="@+id/ivArrow"
              android:layout_width="27dp"
              android:layout_height="27dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:padding="5dp"
              android:layout_margin="4dp"
              android:scaleType="fitXY"
              android:src="@drawable/arrow_black" />
            
      </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#fdf0ea"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/iv1"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Mobile"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/iv1"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:text="M"
                    android:textColor="#4d4d4d"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" >

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/date" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv2"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Date of Birth"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt3"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/iv2"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:text="D"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#4d4d4d"
                    android:textSize="15dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
