<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:text="Managing"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_heading_main" />

    <LinearLayout android:id="@+id/LL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:layout_gravity="center"
        android:visibility="gone">

        <Spinner
            android:id="@+id/spChangeYear"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:padding="6dp"
            android:background="@drawable/photobackground" />

        <Button
            android:id="@+id/btnChangeYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_rounded_rectangle"
            android:textSize="@dimen/text_heading3"
            android:textColor="@color/white"
            android:text="Change Year" />

    </LinearLayout>

    <ListView
        android:id="@+id/LV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:divider="@color/text_grey"
        android:dividerHeight="1px" />

</LinearLayout>

