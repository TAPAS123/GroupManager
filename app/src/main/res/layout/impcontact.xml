<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg1">

    <RelativeLayout
        android:id="@+id/rrm1"
        android:layout_below="@+id/rrupper"
        android:layout_above="@+id/rrlower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp" 
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp" >

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >
             
             <LinearLayout 
                 android:id="@+id/lLmove1" 
                 android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  
                 <ImageView 
                     android:id="@+id/ivContactperson" 
                     android:layout_width="100dp"
			         android:layout_height="110dp"
			         android:layout_marginTop="2dp"
			         android:scaleType="fitXY" 
                     android:layout_alignParentLeft="true" 
                     android:layout_alignParentTop="true" 
                     android:src="@drawable/person1"/>

                 <EditText
                     android:id="@+id/etContname"                                         
                     android:textAppearance="?android:attr/textAppearanceMedium" 
                     android:textColor="#000000" 
                     android:layout_gravity="center_vertical"
                     android:textSize="22dp"
                     android:textStyle="bold" 
                     android:typeface="serif"
                     android:hint="Name"
                     android:textColorHint="#848482"
                     android:inputType="textMultiLine"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"/>


             </LinearLayout>
             

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_marginTop="10dp"
                 android:layout_height="wrap_content" >

                 <ImageView
                     android:id="@+id/imageView1"
                      android:layout_gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_marginRight="20dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/mob10" />

                 <EditText
                     android:id="@+id/etMobile1"
                     android:layout_gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:inputType="number"
                     android:maxLength="10"
                     android:hint="Mobile number1"
                     android:textColorHint="#848482"
                     android:ems="10" >

                 </EditText>
                 
             </LinearLayout>
             
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_marginTop="10dp"
                 android:layout_height="wrap_content" >

                 <ImageView
                     android:id="@+id/imageViewm2"
                      android:layout_gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_marginRight="20dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/mob10" />

                 <EditText
                     android:id="@+id/etMobile2"
                     android:layout_gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:inputType="number"
                     android:hint="Mobile number2"
                     android:textColorHint="#848482"
                     android:maxLength="10"
                     android:ems="10" >

                 </EditText>
                 
             </LinearLayout>
             
              <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_marginTop="10dp"
                 android:layout_height="wrap_content" >

                 <ImageView
                     android:id="@+id/imageViewm3"
                      android:layout_gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_marginRight="20dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/landline_icon" />

                 <EditText
                     android:id="@+id/etMobile3"
                     android:hint="Landline no."
                     android:textColorHint="#848482"
                     android:layout_gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:inputType="number"
                     android:maxLength="12"
                     android:ems="12" >

                 </EditText>
                 
             </LinearLayout>
             
             
              <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_marginTop="5dp"
                 android:layout_height="wrap_content" >

                 <ImageView
                     android:id="@+id/imageViewcontadd"
                     android:layout_marginLeft="3dp"
                     android:layout_gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_marginRight="20dp"
                     android:layout_height="match_parent"
                     android:src="@drawable/addrr" />

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical" >
                     
                      <EditText
                       android:id="@+id/etC1aDD"
                       android:hint="Address Line1"
                       android:textColorHint="#848482"
                       android:inputType="textMultiLine"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                      <EditText
                          android:id="@+id/etAddC2"
                          android:hint="Address Line 2"
                     	  android:textColorHint="#848482"
                          android:inputType="textMultiLine"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">                                              
                      </EditText>

                      <EditText
                          android:id="@+id/etAddC3"
                          android:hint="City"
                     	  android:textColorHint="#848482"
                          android:inputType="textMultiLine"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1">
                      </EditText>
                     
                 </LinearLayout>

                
                 
             </LinearLayout>
             
              <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_marginTop="5dp"
                 android:layout_height="wrap_content" >

                 <ImageView
                     android:id="@+id/imageViewrmk"
                      android:layout_gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_marginRight="20dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/remak" />

                 <EditText
                     android:id="@+id/etContRemak"
                     android:hint="Remark"
                     android:textColorHint="#848482"
                     android:layout_gravity="center_vertical" 
                     android:inputType="textMultiLine"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"/>
                 
             </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content" >
                 
                 <ImageView
                     android:id="@+id/imageViewcateg"
                     android:layout_gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_marginRight="20dp"
                     android:layout_height="match_parent"
                     android:src="@drawable/categ" />
                 
                  <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical" >
                     

                	 <Spinner
			            android:id="@+id/spinnerContCateg"
			            android:layout_marginLeft="5dp"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1" />
                	 
                	 	 <EditText
                          android:id="@+id/etContCateg"
                          android:inputType="textMultiLine"
                          android:layout_width="match_parent"
                          android:visibility="gone"
                          android:layout_height="wrap_content">

                      </EditText>
                	 
                	 </LinearLayout> 
                  
              </LinearLayout> 
              
               
              
             
         </LinearLayout>
     </ScrollView>
     
  </RelativeLayout>
    
<!-- android:visibility="gone" -->


         <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rrlower"
        android:layout_marginLeft="5dp"
         android:layout_marginBottom="3dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

             <ImageView
                 android:id="@+id/ivupdateContact"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="3dp"
                 android:layout_marginTop="6dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:src="@drawable/update" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rrupper"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rrm1"
        android:layout_alignParentTop="true" >

       

    </RelativeLayout>

</RelativeLayout>