<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="2dp"
        android:background="#307401DF" >
        
        
         <TextView
            android:id="@+id/txtCpe_LDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:text="01/02/1989"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />
         
         
        <TextView
            android:id="@+id/txtCpe_LTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:text="11"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />
         
        
        
        <TextView
            android:id="@+id/txtCpe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txtCpe_LHrs"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="CPE-"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />
        

        <TextView
            android:id="@+id/txtCpe_LHrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="60"
            android:textColor="#000000"
            android:textSize="19dp"
            android:textStyle="bold" />
        
        

        <TextView
            android:id="@+id/txtCpe_LName_Topic"
            android:layout_width="match_parent"
            android:layout_below="@+id/txtCpe_LDate"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="17dp" />
        
        
         <TextView
            android:id="@+id/txtCpe_LVenue"
            android:layout_width="match_parent"
            android:layout_below="@+id/txtCpe_LName_Topic"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:text="Venue"
            android:textColor="#000000"
            android:textSize="17dp" />

       
    </RelativeLayout>
    
</LinearLayout>