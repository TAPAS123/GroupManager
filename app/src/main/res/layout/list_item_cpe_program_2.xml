<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#307401DF"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >
        
         <TextView
             android:id="@+id/txtCpe_Sess"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_margin="5dp"
             android:text="S"
             android:textColor="#000000"
             android:textSize="17dp"
             android:textStyle="bold" />
         
         
        <TextView
            android:id="@+id/txtCpe_Sess_Topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtCpe_Sess"
            android:layout_margin="5dp"
            android:text="T"
            android:textColor="#000000"
            android:textSize="17dp" />
        
        
        
        <TextView
            android:id="@+id/txtCpe_Sess_Time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:text="11"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />
        
        

        <TextView
            android:id="@+id/txtCpe_Sess_Speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtCpe_Sess_Topic"
            android:layout_margin="5dp"
            android:text="N"
            android:textColor="#000000"
            android:textSize="17dp" />
        
         <TextView
             android:id="@+id/txtCpe_Sess_Chairman"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/txtCpe_Sess_Speaker"
             android:layout_margin="5dp"
             android:text="V"
             android:textColor="#000000"
             android:textSize="17dp" />
       
    </RelativeLayout>
    
</LinearLayout>