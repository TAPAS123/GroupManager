<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="#fdf0ea"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/txtCpe_LName_Topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="@dimen/text_heading2" />

        <TextView
            android:id="@+id/txtCpe_LDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtCpe_LName_Topic"
            android:text="01/02/1989"
            android:textColor="#000000"
            android:textSize="@dimen/text_heading2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCpe_LHrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtCpe_LName_Topic"
            android:text="60"
            android:textColor="#000000"
            android:textSize="@dimen/text_heading2"
            android:textStyle="bold" />

    </RelativeLayout>
    
</LinearLayout>