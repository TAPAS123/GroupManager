<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="#fdf0ea" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:orientation="vertical" >
      
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="t1"
            android:padding="2dp"
            android:textSize="@dimen/text_heading3" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="t2"
            android:padding="2dp"
            android:textSize="@dimen/text_heading3" />
        
          <TextView
              android:id="@+id/txt3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="t3"
              android:padding="2dp"
              android:textSize="@dimen/text_heading3" />

          <TextView
              android:id="@+id/txt4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="t4"
              android:padding="2dp"
              android:textSize="@dimen/text_heading3" />

    </LinearLayout>

</LinearLayout>
