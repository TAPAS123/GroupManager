<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
	 android:background="@drawable/bg1"
     android:layout_height="wrap_content">
     
     <RelativeLayout 
      android:layout_width="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_centerHorizontal="true"
      android:layout_height="wrap_content" 
      android:layout_alignParentBottom="true"
      android:id="@+id/linearLayoutbutn">
		    
	      <Button 
	      android:layout_height="wrap_content" 
	      android:visibility="gone"
	      android:text="Submit"
	      android:textSize="17dp" 
	      style="@style/ButtonText" 
	      android:layout_width="120dp"  
	      android:background="@drawable/green_button"  
	      android:id="@+id/buttonSave"/>
      
          <Button  
          android:layout_height="wrap_content" 
          android:background="@drawable/green_button" 
          android:text="Cancel" 
          android:id="@+id/buttonListalrt" 
          android:layout_marginTop="3dp" 
          android:textSize="17dp" 
          style="@style/ButtonText" 
          android:layout_width="120dp"  
          android:layout_toRightOf="@+id/buttonSave"/>
      
      </RelativeLayout>
      
     
    
     <LinearLayout 
        android:layout_width="wrap_content" 
        android:layout_alignParentTop="true" 
        android:layout_above="@+id/linearLayoutbutn" 
        android:id="@+id/linearLayout3" 
        android:orientation="vertical"
        android:layout_height="wrap_content">
          
             <ScrollView
                 android:id="@+id/scrollViewRemark"
                 android:visibility="gone"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" >

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical" >

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:layout_marginTop="10dp"
                         android:layout_height="wrap_content" >

                         <EditText
                             android:id="@+id/editTextEmark1"
                             android:padding="6dp"
                             android:inputType="textMultiLine"
                             android:hint="Write first message..."
                             android:background="@drawable/edittextstyle" 
						     android:textSize="18dp"
						     android:textColor="#000000"
                             android:layout_toLeftOf="@+id/checkBoxRemark1"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerVertical="true"
                             android:layout_alignParentLeft="true"/>

                         <CheckBox
                             android:id="@+id/checkBoxRemark1"
                             android:layout_centerVertical="true"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"/>
                         
                     </RelativeLayout>
                     
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:layout_marginTop="10dp"
                         android:layout_height="wrap_content" >

                         <EditText
                             android:id="@+id/editTextEmark2"
                             android:padding="6dp"
                             android:inputType="textMultiLine"
                             android:hint="Write second message..."
                             android:background="@drawable/edittextstyle" 
						     android:textSize="18dp"
						     android:textColor="#000000"
                             android:layout_toLeftOf="@+id/checkBoxRemark2"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerVertical="true"
                             android:layout_alignParentLeft="true"/>

                         <CheckBox
                             android:id="@+id/checkBoxRemark2"
                             android:layout_centerVertical="true"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"/>
                         
                     </RelativeLayout>
                     
                      <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_marginLeft="5dp"
                         android:layout_marginRight="5dp"
                         android:layout_marginTop="10dp"
                         android:layout_height="wrap_content" >

                         <EditText
                             android:id="@+id/editTextEmark3"
                             android:padding="6dp"
                             android:inputType="textMultiLine"
                             android:hint="Write third message..."
                             android:background="@drawable/edittextstyle" 
						     android:textSize="18dp"
						     android:textColor="#000000"
                             android:layout_toLeftOf="@+id/checkBoxRemark3"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerVertical="true"
                             android:layout_alignParentLeft="true"/>

                         <CheckBox
                             android:id="@+id/checkBoxRemark3"
                             android:layout_centerVertical="true"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"/>
                         
                     </RelativeLayout>
                     
                 </LinearLayout>
             </ScrollView>

         <EditText
             android:id="@+id/etremarkShowdialogs"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="3dp"
             android:background="@drawable/edittextstyle"
             android:textColor="#000000"
             android:textSize="18dp"
             android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#50000000"
                android:layout_height="wrap_content" >
                
                <RelativeLayout
	                android:layout_width="match_parent"
	                android:id="@+id/rrDate"
	                android:layout_margin="5dp"
	                android:layout_height="wrap_content" >
                      
                    <ImageView
                        android:id="@+id/imageprevdate"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/prev1" />

                    <!-- <TextView
                       android:id="@+id/textView3"
                       android:layout_alignParentLeft="true"
                       android:layout_width="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textColor="#000000"
                       android:textAppearance="?android:attr/textAppearanceMedium" />  --> 

                      <EditText
                       android:id="@+id/editTextDay"
                       android:inputType="number"
                       android:padding="6dp"
		               android:textColor="#000000"
		               android:background="@drawable/edittextstyle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentTop="true"
                       android:maxLength="2"
                       android:layout_marginLeft="3dp"
                       android:layout_centerVertical="true"
                       android:hint="DD"
                       android:layout_toRightOf="@+id/imageprevdate"/>

                      <TextView
                       android:id="@+id/textView4"
                       android:layout_centerVertical="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@+id/textView3"
                       android:layout_toRightOf="@+id/editTextDay"
                       android:text="-"
                       android:textColor="#000000"
                       android:textAppearance="?android:attr/textAppearanceMedium" />

                      <EditText
                       android:id="@+id/editTextMonth"
                       android:maxLength="2"
                       android:hint="MM"
                       android:padding="6dp"
		               android:textColor="#000000"
		               android:background="@drawable/edittextstyle"
                       android:inputType="number"
                       android:layout_centerVertical="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentTop="true"
                       android:layout_toRightOf="@+id/textView4"/>

                       <Button
                       android:id="@+id/btnDateSubmit"
			           android:layout_gravity="center_horizontal"
			           style="@style/ButtonText" 
			           android:textSize="16dp" 
			           android:background="@drawable/green_button" 
                       android:layout_centerVertical="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:text="Submit" />

                       

                       <ImageView
                           android:id="@+id/imageNextdate"
                           android:layout_marginLeft="1dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_toRightOf="@+id/editTextMonth"
                           android:src="@drawable/next1" />
                       
                </RelativeLayout>
                
                 

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" >

              <!--  <CheckBox
                    android:id="@+id/checkBoxALL"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Select All" /> -->

                <TextView
                    android:id="@+id/textViewNoDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:text="No Record"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="gone" />
                      
            </RelativeLayout>
        
             <ListView 
   			  android:layout_marginTop="3dp"
		      android:id="@+id/listViewAlert" 
		      android:layout_height="wrap_content"
		      android:layout_width="match_parent"/>
             
        </LinearLayout>

        

</RelativeLayout>
