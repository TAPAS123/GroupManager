<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
       android:id="@+id/imageViewPic"
       android:visibility="gone"
       android:layout_centerVertical="true"
       android:layout_width="52dp"
       android:layout_height="58dp"
       android:layout_marginLeft="2dp"
       android:layout_alignParentLeft="true"
       android:src="@drawable/ic_launcher" />>
    
		   <RelativeLayout 
		    android:id="@+id/relativeLayout2" 
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="2dp"
		    android:layout_marginTop="4dp"
		    android:layout_alignParentTop="true"
		    android:layout_toRightOf="@+id/imageViewPic"
		    android:layout_height="wrap_content" 
		    android:layout_width="match_parent">
		    
		    <TextView 
		       android:layout_alignParentLeft="true"
		       android:layout_toLeftOf="@+id/cbBox"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content" 
		       android:text="TextView" 
		       android:textColor="#0000FF"
		       android:id="@+id/txtname"
		       android:layout_centerVertical="true"
		        android:textSize="20dp"/>
		
		    <CheckBox
		        android:id="@+id/cbBox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentTop="true"/>
		
		    </RelativeLayout>

		   <RelativeLayout
		       android:layout_width="match_parent"
		       android:layout_marginLeft="5dp"
		       android:id="@+id/rrmobcity"
		       android:layout_toRightOf="@+id/imageViewPic"
		       android:layout_below="@+id/relativeLayout2" 
		       android:layout_marginRight="2dp"
		       android:layout_height="wrap_content" >
		
		       <TextView
		           android:id="@+id/txtmobile"
		           android:layout_width="125dp"
		           android:visibility="gone"
		           android:layout_height="wrap_content"
		           android:layout_centerVertical="true"
		           android:layout_alignParentTop="true"
		           android:textColor="#008000"
		           android:textSize="18dp"
		           android:layout_toRightOf="@+id/txtdob"
		           android:text="012345678990"
		           android:textAppearance="?android:attr/textAppearanceMedium" />
		
		       <TextView
		           android:id="@+id/txtcity"
		           android:visibility="gone"
		           android:layout_marginLeft="10dp"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_centerVertical="true"
		           android:layout_toRightOf="@+id/txtmobile"
		           android:text="city"
		           android:textAppearance="?android:attr/textAppearanceMedium"
		           android:textColor="#100C08"
		           android:textSize="18dp" />
		
		   </RelativeLayout>

		    <View 
		        android:id="@+id/divider"
		        android:layout_below="@+id/rrmobcity"
			    android:layout_width="fill_parent"
			    android:layout_height="2dp"
			    android:background="#FF000000" />
  
       
 </RelativeLayout>

                       

                       
 
