<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvCpeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Add News"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFF00"
            android:textSize="19dp"
            android:textStyle="bold" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#80ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="Date"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EdDate"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#90ffffff"
                android:editable="false"
                android:hint="dd-mm-yyyy"
                android:inputType="text"
                android:maxLength="10"
                android:textSize="17dp" />

        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="3dp"
           android:layout_marginRight="3dp"
           android:layout_marginTop="15dp"
           android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="6dp"
                android:text="Title"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EDTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#90ffffff"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:maxLength="90" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="6dp"
                android:text="Description"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EDDesc"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="#90ffffff"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLength="1000" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnGroup"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:background="#B4C6EE"
                android:padding="3dp"
                android:text="Select Group" />
            
            <Button
                android:id="@+id/btnSelectMember"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#B4C6EE"
                android:padding="3dp"
                android:text="Select Member" />

        </LinearLayout>
        
        
        <LinearLayout
            android:id="@+id/LLSMS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#95ffffff" 
                    android:orientation="vertical">"

            <TextView
                android:id="@+id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="6dp"
                android:text="Send SMS also"
                android:textSize="17dp"
                android:textStyle="bold" />
            
                <RadioGroup
                    android:id="@+id/rdGrpSendSMS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp" >

                    <RadioButton
                        android:id="@+id/rdbtnSMSAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Selected"
                        android:textSize="16dp" />

                    <RadioButton
                        android:id="@+id/rdbtnSMSWithOutApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Only to those who don't have this App"
                        android:textSize="16dp" />

                </RadioGroup>
                
         </LinearLayout>
       
       

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical" >
        
         <ImageView
             android:id="@+id/imgSubmit"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:src="@drawable/submit" />

    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnPendingNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/orange_button"
            android:visibility="gone"
            android:text="Pending News" />

    </LinearLayout>

</LinearLayout>
