<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:id="@+id/rrupper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#80000000" >

      <TextView
          android:id="@+id/tvcityAff"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:padding="5dp"
          android:text="Head"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="#FFFF00"
          android:textSize="22dp"
          android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rrupper"
        android:layout_above="@+id/rrlower"
        android:background="#66cdaa7d"
        android:layout_margin="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
             <TextView
	        android:id="@+id/textView1AFF"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="3dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Name of Club"
	        android:textColor="#ee7600"
	        android:textStyle="bold"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/tvclubAFF"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="28dp"
	        android:layout_marginTop="5dp"
	        android:text="D"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="#000000" />
	    
	     <TextView
	        android:id="@+id/textView2AFF"
	        android:layout_marginTop="8dp"
	        android:textStyle="bold"
	        android:textColor="#ee7600"
	        android:layout_marginLeft="3dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Address"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/tvAddressAff"
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="28dp"
	        android:layout_marginTop="5dp"
	        android:text=""
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
		    <WebView
			 android:id="@+id/textContent"
			 android:background="#00ffffff"
			 android:visibility="gone"
			 android:layout_marginTop="8dp"
			 android:layout_marginLeft="3dp"
			 android:layout_marginRight="3dp"
			 android:layout_width="fill_parent"
			 android:layout_height="wrap_content" />
	    
	     <TextView
	        android:id="@+id/textView3AFF"
	        android:layout_marginTop="8dp"
	        android:textStyle="bold"
	        android:textColor="#ee7600"
	        android:layout_marginLeft="3dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Contact No."
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/tvContactAFF"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|left"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="28dp"
	        android:layout_marginTop="5dp"
	        android:text="D"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="#000000" />

	    <Button
	        android:id="@+id/btnDELETe"
	        android:visibility="gone"
	        style="@style/ButtonText" 
	        android:textColor="#3D0C02"
            android:background="@drawable/brown_button"
            android:textSize="17dp" 
	        android:layout_gravity="center_horizontal"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:text="Delete" />
            
        </LinearLayout>
    </ScrollView>
    
	   <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rrlower"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >
        
		    <ImageView
                android:id="@+id/imgVw_Ad"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/person1" />

    </RelativeLayout>

   
    
       
</RelativeLayout>
