<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg2"
    android:orientation="vertical" >

	<TextView
		android:id="@+id/txtHead"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="15dp"
		android:text="Past President"
		android:textAllCaps="true"
		android:textColor="@color/black"
		android:textSize="@dimen/text_heading_main"
		android:layout_gravity="center"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="15dp"
		android:padding="12dp"
		android:orientation="vertical"
		android:background="@drawable/edit_text_transparent_new">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<TextView
			android:id="@+id/txtNameTitle"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:text="Name :"
			android:textColor="#764C4C"
			android:textSize="@dimen/text_heading1"/>

		<TextView
			android:id="@+id/txtName"
			android:textColor="#000000"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="NN"
			android:textSize="@dimen/text_heading2"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="15dp">

		<TextView
			android:id="@+id/txtYearTitle"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:textColor="#764C4C"
			android:textSize="@dimen/text_heading1"
			android:text="Year :" />

		<TextView
			android:id="@+id/txtYear"
			android:textColor="#000000"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Yr"
			android:textSize="@dimen/text_heading2"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="15dp">

		<TextView
			android:id="@+id/txtMobTitle"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:textColor="#764C4C"
			android:textSize="@dimen/text_heading1"
			android:text="Mobile :" />

		<TextView
			android:id="@+id/txtMob"
			android:textColor="#000000"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Mo"
			android:textSize="@dimen/text_heading2"
			android:layout_gravity="right|left" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="15dp">

		<TextView
			android:id="@+id/txtEmailTitle"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:textColor="#764C4C"
			android:textSize="@dimen/text_heading1"
			android:text="Email :" />

		<TextView
			android:id="@+id/txtEmail"
			android:textColor="#000000"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="EM"
			android:textSize="@dimen/text_heading2"
			android:layout_gravity="right|left" />

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
