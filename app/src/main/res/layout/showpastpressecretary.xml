<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:background="@drawable/bg1"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@+id/rrupper"
        android:layout_margin="5dp"
        android:background="#66cdaa7d" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="265dp"
            android:orientation="vertical" >
            
             <TextView
	        android:id="@+id/textView1Past"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Name"
	        android:textColor="#ee7600"
	        android:textStyle="bold"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	       <TextView
	        android:id="@+id/tvNamePast"  
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="28dp"
	        android:layout_marginTop="5dp"
	        android:text="dadasdada"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	     <TextView
	        android:id="@+id/textView2Past"
	        android:layout_marginTop="8dp"
	        android:textStyle="bold"
	        android:textColor="#ee7600"
	        android:layout_marginLeft="3dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Year"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/tvYearPast"
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="28dp"
	        android:layout_marginTop="5dp"
	        android:text="wqrrwe"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
		   
	    
	     <TextView
	        android:id="@+id/textView3Past"
	        android:layout_marginTop="8dp"
	        android:textStyle="bold"
	        android:textColor="#ee7600"
	        android:layout_marginLeft="3dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Mobile"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/tvContactPast"
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="28dp"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="10dp"
	        android:text="adfgfdgdg"
	        android:layout_gravity="right|left"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView
	        android:id="@+id/textView4Past"
	        android:layout_marginTop="8dp"
	        android:textStyle="bold"
	        android:textColor="#ee7600"
	        android:layout_marginLeft="3dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Email"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/tvEamilPast"
	        android:textColor="#000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="28dp"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="10dp"
	        android:text="adfgfdgdg"
	        android:layout_gravity="right|left"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </LinearLayout>
    </ScrollView>
    
	  

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rrupper"
        android:layout_margin="1dp"
        android:background="#80000000"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rrm1"
        android:layout_alignParentTop="true" >

          <TextView
	        android:id="@+id/tvheadPast"
	        android:textSize="22dp"
	        android:layout_centerHorizontal="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Past President"
	        android:textColor="#FFFF00"
	        android:textStyle="bold"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
    
       
</RelativeLayout>
