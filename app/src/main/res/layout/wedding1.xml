<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"

    android:background="@drawable/background"
    android:gravity="center">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">

        <Button
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:text="BRIDE"
            android:id="@+id/bridebtn"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btndrawable"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/bride"
          />

        <Button
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:text="GROOM"
            android:id="@+id/groombtn"
            android:textSize="20dp"
            android:background="@drawable/btndrawable"
            android:layout_below="@+id/bridebtn"
            android:layout_alignLeft="@+id/bridebtn"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/groom"/>
    </RelativeLayout>
</RelativeLayout>
