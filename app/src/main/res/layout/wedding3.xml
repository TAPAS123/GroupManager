<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:id="@+id/fulllinearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/toplinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/linearLayout1"
            android:background="@drawable/bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewMemPic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="25dp"
                android:padding="0dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvFamilyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rahul gupta"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/txtFamilydeatiladdvalue"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundcornershape"
                    android:gravity="center"
                    android:text="Male"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tvFamilyGender" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/whiteroundcorner"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:text="Gotra"
                    android:id="@+id/tvFamilyGotra" />

            </LinearLayout>

    </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/middlelinearlayout"
                android:layout_below="@id/toplinearlayout"
                android:layout_width="match_parent"
                android:layout_height="40dp">



    <TableLayout
        android:id="@+id/TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:background="#ffffff" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" >

            <TextView
                android:id="@+id/tvFamilyDOB"
                android:layout_gravity="left"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:width="150dp"
                android:background="#dd242e"
                android:drawableLeft="@drawable/dobicon"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="6dp"
                android:text="04/03/1991"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvFamilyPOB"
                android:layout_gravity="left"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:width="120dp"
                android:background="#dd242e"
                android:drawableLeft="@drawable/pobicon"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="6dp"
                android:text="Kanpur"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvFamilyTOB"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:width="120dp"
                android:background="#dd242e"
                android:drawableLeft="@drawable/tobicon"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="6dp"
                android:text="12:20AM"
                android:textColor="#ffffff"
                android:textSize="14dp" />

        </TableRow>


    </TableLayout>
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_below="@+id/middlelinearlayout"
        android:id="@+id/id11"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

            <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:id="@+id/expandableListView"
                android:groupIndicator="@null"
                android:divider="@null">

            </ExpandableListView>


        </LinearLayout>
    </LinearLayout>

