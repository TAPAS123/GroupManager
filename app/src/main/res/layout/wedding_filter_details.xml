<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
   >

    <TextView
        android:id="@+id/tvhead"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Filter"
        android:gravity="center_vertical|center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#6F6F6F" />


<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvhead"
    android:layout_marginBottom="60dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvgotra"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Gotra: "
            android:textSize="14dp"
            android:textColor="#6F6F6F" />

        <EditText
            android:id="@+id/edtgotra"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:singleLine="true"
            android:textColor="#505050"
            />

    </LinearLayout>



     <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        android:layout_below="@id/linearLayout1"
         android:paddingBottom="15dp"
         android:paddingTop="2dp">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="10dp"
             android:src="@drawable/bottomline"/>
        <TextView
            android:id="@+id/tveducation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:text="Education: "
            android:textSize="14dp"
            android:textColor="#434340" />

        <TextView
            android:id="@+id/tvspeduacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textSize="12dp"
            android:textColor="#B1B0A7"
            android:text="Select Education" />


    </LinearLayout>







        <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout2"
            android:paddingTop="2dp"
            android:paddingBottom="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/bottomline"/>

        <TextView
            android:id="@+id/tvdiet"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:text="Diet: "
            android:textSize="14dp"
            android:textColor="#434340" />

        <TextView
            android:id="@+id/tvspdiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:gravity="top"
            android:textColor="#B1B0A7"
            android:text="Select Diet" />

    </LinearLayout>





    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout3"
        android:paddingTop="2dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/bottomline"/>

        <TextView
            android:id="@+id/tvmanglik"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:text="Manglik: "
            android:textSize="14dp"
            android:textColor="#434340" />

        <TextView
            android:id="@+id/tvspmanglik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#B1B0A7"
            android:text="Select Manglik status" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout4"
        android:paddingTop="2dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/bottomline"/>

        <TextView
            android:id="@+id/tvheight"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:text="Height: "
            android:textSize="14dp"
            android:textColor="#434340" />

        <TextView
            android:id="@+id/tvspheightfeet"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textSize="12dp"
            android:textColor="#B1B0A7"
            android:text="Select Height" />

        <!--<TextView-->
            <!--android:id="@+id/tvfeet"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:textSize="14dp"-->
            <!--android:textColor="#CAC9BF"-->
            <!--android:text="feet" />-->



        <!--<TextView-->
            <!--android:id="@+id/tvspheightinch"-->
            <!--style="@android:style/Widget.Holo.Light.Spinner"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:textSize="14dp"-->
            <!--android:textColor="#CAC9BF"-->
            <!--android:text="0" />-->

        <!--<TextView-->
            <!--android:id="@+id/tvinch"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:textSize="14dp"-->
            <!--android:textColor="#CAC9BF"-->
            <!--android:text="inch" />-->

    </LinearLayout>





    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout5"
        android:paddingTop="2dp"
        android:paddingBottom="15dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/bottomline"/>

        <TextView
            android:id="@+id/tvannualIncome"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:text="Annual Income: "
            android:textSize="14dp"
            android:textColor="#434340" />

        <TextView
            android:id="@+id/tvspannualIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:gravity="top"
            android:textColor="#B1B0A7"
            android:text="Select Annual Income" />

    </LinearLayout>






    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout6"
        android:paddingTop="2dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/bottomline"/>

        <TextView
            android:id="@+id/tvworkingwith"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:text="Working With"
            android:textSize="14dp"
            android:textColor="#434340" />

        <TextView
            android:id="@+id/tvspworkingwith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:gravity="top"
            android:textColor="#B1B0A7"
            android:text="Select Work Status" />

    </LinearLayout>

    </LinearLayout>
</ScrollView>

    <RelativeLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/btndrawable"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:layout_gravity="bottom"
            android:id="@+id/btnsubmit"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/btndrawable"
            android:text="Clear"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:layout_gravity="bottom"
            android:id="@+id/btnclear"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


</RelativeLayout>
